year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

bibentry(bibtype = "Manual",
         title = "{LinRegInteractive}: Interactive Interpretation of Linear Regression Models",
         author = person("Martin", "Meermeyer"),
         year = year,
         note = note,
         url = "http://CRAN.R-project.org/package=LinRegInteractive",
         textVersion = paste0("Martin Meermeyer (", year,"). LinRegInteractive: Interactive Interpretation of Linear Regression Models. ",
                note, ". http://CRAN.R-project.org/package=LinRegInteractive"))

